<div class="container mt-4 p-4">
  <div class="row justify-content-start">
    <div class="border shadow-sm mt-4 p-4">
      <div class="text-center">
        <h1><strong>Mes Favoris</strong></h1>
      </div>

      <div class="container mt-4">
        <div class="row">
          <% @favorites.each do |favorite| %>
            <div class="col-lg-4 col-md-4 col-sm-4 col-12">
              <div class="card">
                <%= link_to(seance_path(id: favorite.tmdb_id, type: favorite.media_type)) do %>
                  <%= image_tag "https://image.tmdb.org/t/p/w500/#{favorite.image_url}", class: "card-img-top img-fluid rounded movie-poster" %>
                <% end %>

                <div class="card-body">
                  <h5 class="card-title"><%= favorite.title %></h5>

                  <%= link_to favorite_path(favorite), data: { turbo_method: :delete, turbo_confirm: 'Êtes-vous sûr?' }, class: "btn btn-danger custom-button" do %>
                    <i class="far fa-trash-can"></i>
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
