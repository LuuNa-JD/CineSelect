<div class="colorindex" style="text-decoration: none;">
  <div class="container p-0 ">
    <div class="border shadow-sm p-4">
      <div class="text-center textecolor">
        <h1><strong>Mes Favoris</strong></h1>
        <div class="horizontal-line"></div>
      </div>
      <div class="container">
        <div class="row">
          <% @favorites.each do |favorite| %>
            <div class="col-6 mb-3 movie-container movie-image cardback ">
              <%= link_to(seance_path(id: favorite.tmdb_id, type: favorite.media_type)) do %>
                <%= image_tag "https://image.tmdb.org/t/p/w500/#{favorite.image_url}", class: "movie-image", style: "max-width: 100%; height: auto;" %>
              <% end %>
              <div data-controller = "delete" data-action="click->delete#confirmDeletion"class="movie-delete p-3">
                <%= link_to favorite_path(favorite), data: { turbo_method: :delete, turbo_confirm: 'Êtes-vous sûr?' } do %>
                  <i class="far fa-trash-can white-icon"></i>
                <% end %>
              </div>
            <% end %>
            <div class="mt-1">
              <%= link_to favorite_path(favorite), data: { turbo_method: :delete, turbo_confirm: 'Êtes-vous sûr?' } do %>
                <i class="far fa-trash-can white-icon movie-delete"></i>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
