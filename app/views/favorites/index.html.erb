<div class="colorindex" style="text-decoration: none;">
  <div class="container mt-4 p-4">
    <div class="border shadow-sm mt-4 p-4">
      <div class="text-center textecolor">
        <h1><strong>Mes Favoris</strong></h1>
        <div class="horizontal-line"></div>
      </div>
      <div class="container">
        <div class="row">
          <% @favorites.each do |favorite| %>
            <div class="col-4  mb-3">
              <div class="movie-container position-relative">
                <%= link_to(seance_path(id: favorite.tmdb_id, type: favorite.media_type)) do %>
                <%# <div> %>
                  <%= image_tag "https://image.tmdb.org/t/p/w500/#{favorite.image_url}", class: "rounded img-fluid" %>
                  <%# </div> %>
                <% end %>
                </div>
                <div class="movie-delete position-absolute bottom-0 end-0 p-3">
                  <%= link_to favorite_path(favorite), data: { turbo_method: :delete, turbo_confirm: 'Êtes-vous sûr?' } do %>
                    <i class="far fa-trash-can white-icon"></i>
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
