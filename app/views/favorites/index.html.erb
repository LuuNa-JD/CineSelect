<div class="container-fluid colorindex scroll-container">
  <div class="row justify-content-center align-items-center">
    <div class="col pt-lg-5">
      <div class="text-center mt-4 textecolor">
        <h1 class="title-color"><strong>Mes Favoris</strong></h1>
        <div class="horizontal-line"></div>
      </div>

      <div class="container  col-12 col-lg-8 pt-2 mt-2 pb-5 pb-lg-1">
        <div class="row">
          <% @favorites.each do |favorite| %>
          <div class="col-6 movie-container movie-image px-3 px-lg-5 py-2 py-lg-3">
            <%= link_to(streaming_platforms_path(id: favorite.tmdb_id, type: favorite.media_type)) do %>
            <%= image_tag "https://image.tmdb.org/t/p/w500/#{favorite.image_url}", style: "max-width: 100%; height: auto;" %>
            <% end %>

            <div class="movie-delete p-3">
              <%= link_to favorite_path(favorite), method: :delete, data: { turbo_method: :delete, turbo_confirm: 'Êtes-vous sûr?' } do %>
              <i class="far fa-trash-can white-icon"></i>
              <% end %>
            </div>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
