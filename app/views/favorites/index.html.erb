<div class=" container pt-2 colorindex">
  <div class="p-2 mt-1">
    <div class="text-center mt-4 textecolor">
      <h1><strong>Mes Favoris</strong></h1>
      <div class="horizontal-line"></div>
    </div>

    <div class="container pt-2 mt-2">
      <div class="row">
        <% @favorites.each do |favorite| %>
          <div class="col-6 mb-3 movie-container movie-image">
            <%= link_to(seance_path(id: favorite.tmdb_id, type: favorite.media_type)) do %>
              <%= image_tag "https://image.tmdb.org/t/p/w500/#{favorite.image_url}", style: "max-width: 100%; height: auto;" %>
            <% end %>

            <div class="movie-delete p-3">
              <%= link_to favorite_path(favorite), method: :delete, data: { turbo_method: :delete, turbo_confirm: 'Êtes-vous sûr?' } do %>
                <i class="far fa-trash-can white-icon"></i>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
