<div class="container-fluid main-container">
  <div class="row justify-content-center align-items-center">
    <div class="col p-0">
      <div class="second-container">
        <div class="profile-header">
          <h3 class="title-profile-style">Hello <%= current_user.username %></h3>
        </div>
        <div class="background-standard profile-body">
          <div class="text-center">
            <%= image_tag(current_user.avatar, class: "avatar-large", alt: "avatar")%>
          </div>
          <div class="new-platform text-center mt-4">
            <%= link_to "Ajouter une platforme", new_user_platform_path, class: " button-standard" %>
          </div>
          <div class="edit-profile text-center mt-4">
            <%= link_to "Modifier le profile", edit_user_registration_path, class: "button-standard" %>
          </div>
          <div class="logout text-center mt-4">
            <%= link_to "Se deconnecter", destroy_user_session_path, data: {turbo_method: :delete}, class: "button-standard" %>
          </div>
        </div>
      </div>
    </div>

  </div>
</div>
