<div class="container rounded-circle">
  <div class="row mt-4">
    <div class="col d-flex flex-column align-items-center">
      <% Rails.logger.debug "Item Details: #{@item_details}" %>
      <% if @item_details.present? %>
        <%= image_tag("https://image.tmdb.org/t/p/w500/#{@item_details["poster_path"]}", alt: "#{@item_details["title"] || @item_details["name"]} poster", class: "img-fluid") %>
      <% else %>
        <p>DÃ©tails non disponibles.</p>
      <% end %>

      <% if @item_in_favorites %>
        <%= button_to favorite_path(@item_in_favorites), method: :delete, html: { class: "mt-3 ml-auto" } do %>
          <i class="fa-solid fa-heart"></i>
        <% end %>
      <% else %>
        <%= button_to favorites_path, method: :post, params: { tmdb_id: @item_details["id"], media_type: @item_details["media_type"], title: @item_details["title"], image_url: @item_details["poster_path"] }, html: { class: "mt-3 ml-auto" } do %>
          <i class="far fa-heart"></i>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
