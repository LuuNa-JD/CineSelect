<div class="container mt-4 p-4">
  <div class="row justify-content-center">
    <div class="col-md-4 border shadow-sm mt-4 p-4">
      <h1 class="text-center">Ouvrir une seance</h1>
      <%= simple_form_for @seance, html: { class: 'custom-form' } do |f| %>
        <%= f.input :watch_region, input_html: { class: 'form-control' }, required: true %>
        <%= f.input :seance_type, collection: ['Film', 'Série'], prompt: 'Sélectionnez un type', input_html: { class: 'form-control' } %>

        <%= f.input :genre, collection: @genres, prompt: 'Sélectionnez un genre', input_html: { class: 'form-control' } %>
        <%= f.input :keyword, input_html: { class: 'form-control' },  disabled: true  %>
        <%# <%= f.input :watch_provider, collection: ['Netflix', 'Amazon Prime Video', 'Disney+'], prompt: 'Sélectionnez un fournisseur de streaming', input_html: { class: 'form-control' } %>
        <%# <%= f.input :origin_country, input_html: { class: 'form-control' } %>
        <%# <%= f.input :release_date, as: :date, input_html: { class: 'form-control' } %>
        <%# <%= f.input :distributor, input_html: { class: 'form-control' } %>
        <%# <%= f.input :runtime, input_html: { class: 'form-control' } %>
        <%# <%= f.input :variety, input_html: { class: 'form-control' } %>
        <%= f.submit "Submit", class: "btn btn-primary" %>
      <% end %>

      <%= link_to 'Profile', profile_path(current_user), class: "btn btn-secondary custom-button mt-2" %>
    </div>
  </div>
</div>
